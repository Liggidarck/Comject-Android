<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ProjectDevil" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProjectDevilToolbar" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Эта поебень нужна для красоты, тулбары не везде. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ProjectDevil.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/blue_primary_variant</item>
        <item name="colorAccent">@color/blueSecondary</item>
    </style>

</resources>