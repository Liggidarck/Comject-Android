<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/main_profile_image_teather"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:src="@drawable/default_3"
                    android:scaleType="centerCrop"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_ava_teather"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/main_profile_image_teather"
                    android:src="@drawable/anton_ava"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-40dp"
                    app:civ_border_width="3.5dp"
                    app:civ_border_color="@color/white"/>

                <TextView
                    android:id="@+id/main_name_profile_teather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:layout_below="@id/main_ava_teather"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:id="@+id/main_username_teather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_name_profile_teather"
                    android:text="null"
                    android:textSize="17sp"
                    android:layout_marginStart="15dp" />

                <Button
                    android:id="@+id/edit_profile_btn_teather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="edit profile"
                    android:layout_below="@id/main_ava_teather"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    style="?attr/materialButtonOutlinedStyle"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" >

                    <TextView
                        android:id="@+id/text_num_posts_teather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:fontFamily="@font/product_sans_light"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text_num_posts_teather"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/followers_layout_teather"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="4dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" >

                    <TextView
                        android:id="@+id/text_num_followers_teather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:fontFamily="@font/product_sans_light"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text_num_followers_teather"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/following_layout_teather"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="4dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" >

                    <TextView
                        android:id="@+id/text_num_following_teather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:fontFamily="@font/product_sans_light"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text_num_following_teather"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/settings_btn_teather"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="settings"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_marginStart="15dp"/>

                <Button
                    android:id="@+id/general_info_teather"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="general info"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/line_gray_dark"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>