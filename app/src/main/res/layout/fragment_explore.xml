<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar_explore"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Explore" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card1_explore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"
                                    android:src="@drawable/ava_me"
                                    app:civ_border_width="0dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"/>

                                <TextView
                                    android:id="@+id/name_card_eee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="George Filatov"
                                    android:layout_toEndOf="@id/profile_image"
                                    android:fontFamily="@font/product_sans_bold"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:id="@+id/namespace_card_eee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Liggidarck"
                                    android:layout_toEndOf="@id/profile_image"
                                    android:layout_below="@id/name_card_eee"
                                    android:layout_marginStart="10dp" />

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="174dp"
                                android:src="@drawable/default_2"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Title goes here"
                                    android:fontFamily="@font/product_sans_black"
                                    android:textSize="22sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Long continuation of the description. Long default text for you project. Continuation of the description. Long default text for you project. Long default text for you project. Long continuation of description. default text for you project."
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Информатика #Программирование #IT #Мобильное Приложение #что-тоЕще"
                                    android:textColor="#1E3F92"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/product_sans_medium" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:src="@drawable/line_gray_dark"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginTop="15dp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/icon_likes1"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="16dp"
                                        android:src="@drawable/ic_baseline_favorite_24_red" />

                                    <TextView
                                        android:id="@+id/val_likes1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5.4k"
                                        android:textSize="15sp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/product_sans_regular"
                                        android:layout_toEndOf="@id/icon_likes1"
                                        android:layout_marginStart="8dp"
                                        android:layout_centerVertical="true"/>

                                    <ImageView
                                        android:id="@+id/icon_comment_1"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/chat"
                                        android:layout_toEndOf="@id/val_likes1"
                                        android:layout_marginStart="26dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1.3 Comments"
                                        android:layout_toEndOf="@id/icon_comment_1"
                                        android:layout_marginStart="8dp"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/product_sans_regular"
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true" />

                                </RelativeLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/share_btn1"
                                        android:layout_width="170dp"
                                        android:layout_height="55dp"
                                        android:fontFamily="@font/google_sans_medium"
                                        android:text="like"
                                        android:textColor="#4A4A4A"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        app:icon="@drawable/ic_baseline_favorite_border_24"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"  />

                                    <Button
                                        android:layout_width="170dp"
                                        android:layout_height="55dp"
                                        android:layout_toEndOf="@id/share_btn1"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:text="COMMENT"
                                        android:textColor="#4A4A4A"
                                        app:icon="@drawable/ic_outline_chat_24"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"  />

                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card2_explore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image_2"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"
                                    android:src="@drawable/ava_kate_secondary"
                                    android:layout_marginStart="15dp"
                                    app:civ_border_width="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"/>

                                <TextView
                                    android:id="@+id/name_card_eee2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kate Sheptukhina"
                                    android:layout_toEndOf="@id/profile_image_2"
                                    android:fontFamily="@font/product_sans_bold"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:id="@+id/namespace_card_eee2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="_kate_sheee_"
                                    android:layout_toEndOf="@id/profile_image_2"
                                    android:layout_below="@id/name_card_eee2"
                                    android:layout_marginStart="10dp" />

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="174dp"
                                android:src="@drawable/default_4"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Title goes here"
                                    android:fontFamily="@font/product_sans_black"
                                    android:textSize="22sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Long continuation of the description. Long default text for you project. Continuation of the description. Long default text for you project. Long default text for you project. Long continuation of description. default text for you project."
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Информатика #Программирование #IT #Мобильное Приложение #что-тоЕще"
                                    android:textColor="#1E3F92"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/product_sans_medium" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:src="@drawable/line_gray_dark"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginTop="15dp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/icon_likes2"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="16dp"
                                        android:src="@drawable/ic_baseline_favorite_24_red" />

                                    <TextView
                                        android:id="@+id/val_likes2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5.4k"
                                        android:textSize="15sp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/product_sans_regular"
                                        android:layout_toEndOf="@id/icon_likes2"
                                        android:layout_marginStart="8dp"
                                        android:layout_centerVertical="true"/>

                                    <ImageView
                                        android:id="@+id/icon_comment_2"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/chat"
                                        android:layout_toEndOf="@id/val_likes2"
                                        android:layout_marginStart="26dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1.3 Comments"
                                        android:layout_toEndOf="@id/icon_comment_2"
                                        android:layout_marginStart="8dp"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/product_sans_regular"
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true" />

                                </RelativeLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/share_btn2"
                                        android:layout_width="170dp"
                                        android:layout_height="55dp"
                                        android:fontFamily="@font/google_sans_medium"
                                        android:text="like"
                                        android:textColor="#4A4A4A"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        app:icon="@drawable/ic_baseline_favorite_border_24"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"  />

                                    <Button
                                        android:layout_width="170dp"
                                        android:layout_height="55dp"
                                        android:layout_toEndOf="@id/share_btn2"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:text="COMMENT"
                                        android:textColor="#4A4A4A"
                                        app:icon="@drawable/ic_outline_chat_24"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"  />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>